#!/usr/bin/env python3
from glob import glob
import subprocess
import os
import sys

if len(sys.argv) > 1:
    files = sys.argv[1:]
else:
    files = glob("*.mp4")

for file in files:
    afile = file.replace('mp4', 'mp3')
    if not os.path.isfile(afile):
        print("Converting "+file)
        subprocess.call(["ffmpeg", "-i", file, "-q:a", "0", "-map", "a", afile])
